<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <display-name>E-Commerce Microservices Frontend</display-name>
    <description>JSP/Servlet Frontend for E-Commerce SOA Project</description>
    
    <!-- Servlet Definitions -->
    
    <!-- CheckoutServlet: Handles stock check and pricing calculation -->
    <servlet>
        <servlet-name>CheckoutServlet</servlet-name>
        <servlet-class>servlets.CheckoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckoutServlet</servlet-name>
        <url-pattern>/CheckoutServlet</url-pattern>
    </servlet-mapping>
    
    <!-- ConfirmOrderServlet: Handles order creation, loyalty update, notification -->
    <servlet>
        <servlet-name>ConfirmOrderServlet</servlet-name>
        <servlet-class>servlets.ConfirmOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConfirmOrderServlet</servlet-name>
        <url-pattern>/ConfirmOrderServlet</url-pattern>
    </servlet-mapping>
    
    <!-- ProfileServlet: Handles customer profile retrieval -->
    <servlet>
        <servlet-name>ProfileServlet</servlet-name>
        <servlet-class>servlets.ProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProfileServlet</servlet-name>
        <url-pattern>/ProfileServlet</url-pattern>
    </servlet-mapping>
    
    <!-- OrdersHistoryServlet: Handles orders history retrieval -->
    <servlet>
        <servlet-name>OrdersHistoryServlet</servlet-name>
        <servlet-class>servlets.OrdersHistoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrdersHistoryServlet</servlet-name>
        <url-pattern>/OrdersHistoryServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>NotificationHistoryServlet</servlet-name>
        <servlet-class>servlets.NotificationHistoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NotificationHistoryServlet</servlet-name>
        <url-pattern>/NotificationHistoryServlet</url-pattern>
    </servlet-mapping>
    
    <!-- Welcome File List -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
</web-app>
